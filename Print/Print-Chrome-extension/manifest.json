{
  "manifest_version": 2,
  "name": "__MSG_namechrome__",
  "short_name": "Print",  
  "version": "2.2.4.0",
  "description": "__MSG_description__",
  "author": "Stefan vd",
  "homepage_url": "https://www.stefanvd.net/support/",
  "icons": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "browser_action": {
          "default_icon": {
            "19": "icons/default.png",
            "38": "icons/default@2x.png"
          },
	        "default_title": "__MSG_name__"
  },
  "content_scripts": [
    {
    "matches": ["*://*.stefanvd.net/project/print/browser/options.html"],
    "js": ["js/constants.js","js/options.js"],
    "run_at": "document_end"
    }
  ],
  "background": {
    "page": "background.html",
	  "persistent": false
  },
  "content_security_policy": "script-src 'self'; img-src *; object-src 'self'",
    "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+P",
        "mac": "MacCtrl+Shift+P"
      }
    }
  },
  "minimum_chrome_version": "43",
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "offline_enabled": true,
  "permissions": ["activeTab", "contextMenus", "storage"]
}