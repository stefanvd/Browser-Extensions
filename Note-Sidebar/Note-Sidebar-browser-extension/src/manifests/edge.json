{
  "name": "__MSG_nameedge__",
  "side_panel": {
    "default_path": "panel.html"
  },
  "action": {
    "default_title": "__MSG_name__"
  },
  "background": {
		"service_worker": "scripts/background.js"
	},
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+T",
        "mac": "MacCtrl+Shift+T"
      }
    },
    "copytext_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+A",
        "mac": "MacCtrl+Shift+A"
      },
      "description": "__MSG_copytext__"
    }
  },
  "offline_enabled": true,
  "minimum_chrome_version": "114",
  "permissions": ["contextMenus", "storage", "sidePanel", "unlimitedStorage", "scripting", "activeTab"]
}